
@{
    ViewBag.Title = "InsertOrderForm";
}



<form action="InsertOrders" >

    <br/>
            
            <div class="row">
                <div class="input-field col l6 m6 s12 ">
                    <select id="SizeId" name="SizeId">
                        <option value="" disabled selected>Choose your size</option>
                        <option value="1">Small $7.45</option>
                        <option value="2">Medium $10.45</option>
                        <option value="3">Large $13.45</option>
                    </select>
                    <label>Select Size</label>

                </div>

                <p>
                    <input type="checkbox" class="filled-in" id="DelOpt" name="DelOpt" value="true" />
                    <label for="DelOpt">Delivery Option </label>
                    <input type="hidden" id="DelOpt" name="DelOpt" value="false" />
                </p>

            </div>

            <div class="row">
                <div class="input-field col l6 m6 s12">

                    <select id="ChId" name="ChId">
                        <option value="" disabled selected>Choose your amount</option>
                        <option value="1">None </option>
                        <option value="2">Regular</option>
                        <option value="3">Extra +$2</option>
                    </select>
                    <label>Select Cheese Amount</label>
                </div>

                <div class="input-field col l6 m6 s12">

                    <select id="SaId" name="SaId">
                        <option value="" disabled selected>Choose your amount</option>
                        <option value="1">None </option>
                        <option value="2">Regular</option>
                        <option value="3">Extra +$1</option>
                    </select>
                    <label>Select Sauce Amount</label>
                </div>
                <div class="row ">
                    <div class="col l6 m6 s6">
                        <p>
                            <input type="checkbox" class="filled-in" id="Peppers" name="Peppers" value="true"/>
                            <label for="Peppers">Peppers</label>
                            <input type="hidden" id="Peppers" name="Peppers" value="false" />
                        </p>
                        

                        <p>
                            <input type="checkbox" class="filled-in" id="Mushrooms" name="Mushrooms" value="true"/>
                            <label for="Mushrooms">Mushrooms</label>
                            <input type="hidden" id="Mushrooms" name="Mushrooms" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Onion" name="Onion" value="true"/>
                            <label for="Onion">Onion</label>
                            <input type="hidden" id="Onion" name="Onion" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Chicken" name="Chicken" value="true"/>
                            <label for="Chicken">Chicken</label>
                            <input type="hidden" id="Chicken" name="Chicken" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Tomatoes" name="Tomatoes" value="true"/>
                            <label for="Tomatoes">Tomatoes</label>
                            <input type="hidden" id="Tomatoes" name="Tomatoes" value="false" />
                        </p>

                        
                    </div>
                    <div class="col l6 m6 s6">
                        <p>
                            <input type="checkbox" class="filled-in" id="Pepperoni" name="Pepperoni" value="true"/>
                            <label for="Pepperoni">Pepperoni</label>
                            <input type="hidden" id="Pepperoni" name="Pepperoni" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Bacon" name="Bacon" value="true"/>
                            <label for="Bacon">Bacon</label>
                            <input type="hidden" id="Bacon" name="Bacon" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Steak" name="Steak" value="true" />
                            <label for="Steak">Steak</label>
                            <input type="hidden" id="Steak" name="Steak" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Ham" name="Ham" value="true" />
                            <label for="Ham">Ham</label>
                            <input type="hidden" id="Ham" name="Ham" value="false" />
                        </p>

                        <p>
                            <input type="checkbox" class="filled-in" id="Sausage" name="Sausage" value="true"/>
                            <label for="Sausage">Sausage</label>
                            <input type="hidden" id="Sausage" name="Sausage" value="false" />
                        </p>

                        
                    </div>

                </div>

            </div>
            <div class="hide">
                <input placeholder="Total" id="OTotal" type="text" class="validate" name="OTotal" value=0>
                <label for="OTotal">Total</label>
            </div>

            <button class="btn waves-effect waves-light black" type="Reset" value="Reset" name="action" style="right: 20px;">Reset</button>

            <button class="btn waves-effect waves-light black" type="Submit" value="Submit" name="action">Send</button>
        </form>




